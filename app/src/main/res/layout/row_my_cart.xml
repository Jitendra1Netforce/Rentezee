<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:id="@+id/relativeCantainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >


        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:src="@mipmap/intro1"
                android:scaleType="fitXY"
                android:background="@drawable/black_border"
                android:padding="3dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM TOTAL"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(RENTAL + SECURITY)"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeData"
            android:layout_toRightOf="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SONY E 50"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_categories_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics and Appliances"
                android:layout_below="@+id/tv_product_name"
                />

            <TextView
                android:id="@+id/tv_rental_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rental:"
                android:layout_below="@+id/tv_categories_name"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_rental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500:00"
                android:layout_below="@+id/tv_categories_name"

                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/tv_security_fee_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Fee:"
                android:layout_below="@+id/tv_rental_heading"

                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_security_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28000"
                android:layout_below="@+id/tv_rental_heading"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tv_rent_duration_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Duration:"
                android:layout_below="@+id/tv_security_fee_heading"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/tv_rent_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Days"
                android:layout_below="@+id/tv_security_fee_heading"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/textview_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/tv_from_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textview_from_date"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_from_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yy"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_from_month"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="t0"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_from_year"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                />

            <TextView
                android:id="@+id/textview_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_to"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/tv_to_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textview_to_date"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/tv_to_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yy"
                android:layout_below="@+id/tv_rent_duration_heading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_to_month"
                android:textColor="@color/black"
                android:background="@drawable/black_border"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                />




        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeData"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="28,500"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewpager"
        android:layout_below="@+id/relativeCantainer"
        ></View>

</RelativeLayout>