<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/ivTrendingImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDashboardTrendingText"
                    style="@style/MyTextViewNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/tvDashboardTrendingPrice"
                    android:layout_toStartOf="@+id/tvDashboardTrendingPrice"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvDashboardTrendingPrice"
                    style="@style/MyTextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:padding="5dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDashboardTrendingCategoryText"
                style="@style/MyTextViewNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/hintColor"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textAllCaps="true" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>