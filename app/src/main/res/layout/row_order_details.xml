<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screenbackground"
    >


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
         android:layout_margin="10dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/relativeProductdetails"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/intro1"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#99000000"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sony E 500 23 megapixels "
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/tvProductType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OnRent"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvSellername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rented to: Vishwash Bhati"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    />

            </RelativeLayout>


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tvCategoriesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics and Appliances"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
               android:id="@+id/tvRentHeading"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Rental:"
               android:layout_below="@+id/tvCategoriesName"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_alignParentLeft="true"
               />


            <TextView
                android:id="@+id/tvRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600 per day"
                android:layout_below="@+id/tvCategoriesName"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tvSecurityfeeHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Fee:"
                android:layout_below="@+id/tvRentHeading"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                />


            <TextView
                android:id="@+id/tvSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000"
                android:layout_below="@+id/tvRentHeading"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tvRentDurationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Duration:"
                android:layout_below="@+id/tvSecurityfeeHeading"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                />


            <TextView
                android:id="@+id/tvRentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Days"
                android:layout_below="@+id/tvSecurityfeeHeading"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/09/2016"
                android:layout_below="@+id/tvRentDurationHeading"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tvto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:layout_below="@+id/tvRentDurationHeading"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
               android:layout_toRightOf="@+id/tvToDate"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/09/2016"
                android:layout_below="@+id/tvRentDurationHeading"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvto"
                android:layout_marginLeft="10dp"
                />




        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#F1F5F7"
            android:layout_marginTop="0dp"
            ></View>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >


            <TextView
                android:id="@+id/tvItemTotalHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM TOTAL"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/tvRentalSecurityHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Rental + Security)"
                android:layout_below="@+id/tvItemTotalHeading"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvItemTotalHeading"
                >

                <TextView
                    android:id="@+id/tvRupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="\u20B9"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvItemTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="52222"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/tvRupees"
                    android:layout_marginLeft="2dp"
                    />

            </RelativeLayout>





        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>




</RelativeLayout>