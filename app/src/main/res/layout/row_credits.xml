<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        >


            <TextView
                android:id="@+id/txtcreditBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit By"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                />


            <TextView
                android:id="@+id/txtAmountHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginLeft="7dp"
                android:textColor="@color/black"
                android:layout_below="@+id/txtcreditBy"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 500"
                android:layout_below="@+id/txtcreditBy"
                android:layout_toRightOf="@+id/txtAmountHeading"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 Aug"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtAmountHeading"
                android:layout_marginTop="10dp"
                />



    </RelativeLayout>

</android.support.v7.widget.CardView>