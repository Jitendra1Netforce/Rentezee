<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.chat.laptop.hivego.edit_profile.EditProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_user_pic"
        />


    <EditText
        android:id="@+id/user_first_name"
        android:layout_below="@+id/user_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/google_button_background"
        android:padding="15dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="RITA"
        />


    <EditText
        android:id="@+id/user_last_name"
        android:layout_below="@+id/user_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/google_button_background"
        android:padding="15dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="SINGH"
        />

    <EditText
        android:id="@+id/mobile_number"
        android:layout_below="@+id/user_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/google_button_background"
        android:padding="15dp"
        android:hint="MOBILE NO"
        android:inputType="number"
        android:maxLength="10"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_below="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/google_button_background"
        android:padding="15dp"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_textinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edittext"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:animateLayoutChanges="false"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="15dp"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/google_button_background"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_below="@+id/password_textinput"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/female_gender"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_female"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/male_gender"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/mele"
            />


    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="SAVE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/gender_layout"
        />

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>