<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/blog_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/body"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/blog_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/blog_image"
        android:text="@string/blog_heding_data"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/salon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_heading"
        android:layout_toRightOf="@+id/blog_image"
        android:text="At All Premium Salon"
        android:textColor="@color/tab_details_color"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/exclusive_offer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salon_type"
        android:layout_toRightOf="@+id/blog_image"
        android:text="At All Premium Salon"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E0E1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/blog_image"
        android:layout_marginRight="5dp"
        ></View>


</RelativeLayout>