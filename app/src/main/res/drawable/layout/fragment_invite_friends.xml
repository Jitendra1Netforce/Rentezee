<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="10"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="5dp"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="10"
          android:orientation="vertical"
          >


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:layout_height="150dp">

              <ImageView

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_refer_user"
                  />

          </LinearLayout>


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              >

              <TextView
                  android:id="@+id/offer_data_txt"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:text="@string/offer_data"
                  android:layout_centerHorizontal="true"
                  />

              <Button
                  android:layout_below="@+id/offer_data_txt"
                  android:id="@+id/invite_button"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:text="INVITE YOUR PHONE CONTACTS"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:textColor="@drawable/button_text_color"
                  android:background="@drawable/button_selector"
                  />


              <Button
                  android:layout_below="@+id/invite_button"
                  android:id="@+id/share_link"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:text="Share your link"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:textColor="@color/black"
                  android:background="?android:attr/selectableItemBackground"
                  />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/black"
                  android:layout_below="@+id/share_link"
                  ></View>


          </RelativeLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="10"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="20dp"
              >

              <TextView
                  android:id="@+id/haveAccountTxt"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="7"
                  android:text="RITA SINGH"
                  android:textColor="#000000"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="10dp"
                  />

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="3"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

                  <Button
                      android:id="@+id/loginButton"
                      android:layout_width="match_parent"
                      android:layout_height="35dp"
                      android:padding="10dp"
                      android:text="SHARE"
                      android:textColor="@drawable/button_text_color"
                      android:background="@drawable/button_selector"
                      />

              </LinearLayout>



          </LinearLayout>


          <Button
              android:id="@+id/post_invite_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:text="VIEW POST INVITE"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:textColor="@color/colorPrimary"
              android:background="?android:attr/selectableItemBackground"
              />




          <Button
              android:id="@+id/term_condition"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/term_heading"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:textColor="@color/black"
              android:background="?android:attr/selectableItemBackground"
              />



      </LinearLayout>



  </ScrollView>

</LinearLayout>
