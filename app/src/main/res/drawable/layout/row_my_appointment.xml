<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/my_aapointment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginTop="2dp"
    android:tint="?attr/colorControlNormal"
    >

<RelativeLayout
    android:id="@+id/relativelayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    >

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/month_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/date_txt"
        />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:45AM"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/month_txt"
        android:layout_marginTop="2dp"
        />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/color_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/relativelayout1"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        >


        <ImageView

            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_red_back"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_toRightOf="@+id/color_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="3 Services"
           android:textColor="@color/tab_details_color"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salon_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_details"
            android:layout_marginTop="5dp"
            android:textColor="@color/tab_details_color"
            />


    </LinearLayout>


</RelativeLayout>