<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chat_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:padding="5dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="70"
            android:weightSum="8"
            >


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="7"
                  android:background="@drawable/color_chat_bubble_back"

                  >
                  <TextView
                      android:id="@+id/user_message"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/white_chat_box_text"
                      android:textColor="@color/black"
                      android:padding="15dp"
                      />



              </LinearLayout>


            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_pink"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:layout_marginLeft="-2dp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/mele"
                android:layout_centerVertical="true"
                app:civ_border_width="0dp"
                />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"

        android:layout_marginBottom="10dp"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="80"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:id="@+id/day_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                     android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:45"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_below="@+id/day_txt"

                    />

            </RelativeLayout>



        </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_female"
                app:civ_border_width="0.0dp"
                android:layout_gravity="right"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="70"
            android:weightSum="8"
            >



            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_white"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:layout_marginRight="-2dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/white_chat_bubble_back"

                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/white_chat_box_text"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    />



            </LinearLayout>







        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"

        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_gravity="center"
            android:orientation="vertical"
            >




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="80"
            >



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                >
                <TextView
                    android:id="@+id/day_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/time_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:45"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:layout_below="@+id/day_txt2"
                    android:textSize="10sp"
                    />

            </RelativeLayout>
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>