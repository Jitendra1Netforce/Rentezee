<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5"
        >

        <TextView
            android:id="@+id/textView_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crystal Spa Manicure"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 600"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />


    </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:background="@drawable/google_button_background"
                >

                <Button
                    android:id="@+id/increament_Service"
                    android:layout_width="40dp"
                    android:layout_height="27dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />


                <TextView
                    android:id="@+id/textView_services_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp"
                    />

                <Button
                    android:id="@+id/decreament_Service"
                    android:layout_width="40dp"
                    android:layout_height="27dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="18dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:id="@+id/textView_service_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₹600"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                   android:textStyle="bold"
                    />


            </LinearLayout>

        </RelativeLayout>



</LinearLayout>