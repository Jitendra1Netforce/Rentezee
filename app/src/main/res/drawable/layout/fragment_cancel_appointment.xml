<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@drawable/texture"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo"
                    />

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIVEGO"
                    android:layout_toRightOf="@+id/logoImage"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/prepaid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREPAID"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/salon_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALON NAME"
                    android:layout_below="@+id/logoImage"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/salon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F SALON PARIS"
                    android:layout_below="@+id/salon_heading"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/salon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salon_address"
                    android:layout_below="@+id/salon_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"

                    />

                <LinearLayout
                    android:id="@+id/user_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_below="@+id/salon_address"
                    >

                    <TextView
                        android:id="@+id/customer_name_heading"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="CUSTOMER"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"

                        />


                    <TextView
                        android:id="@+id/booking_name_heading"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BOOKING #"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:id="@+id/sex_name_heading"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SEX"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />



                    <TextView
                        android:id="@+id/time_name_heading"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="TIME"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_details_layout"
                    >

                    <TextView
                        android:id="@+id/customer_name_txt"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rita Singh"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"

                        />


                    <TextView
                        android:id="@+id/booking_id_txt"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="F3928"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"

                        />

                    <TextView
                        android:id="@+id/sex_txt"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"


                        />

                    <TextView
                        android:id="@+id/user_time_txt"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="11:45"
                        android:layout_below="@+id/salon_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_details"
                    android:layout_margin="10dp"
                    >


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:src="@drawable/qr"
                        android:scaleType="fitXY"
                        />

                    <RelativeLayout
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/date_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 AUGUST 2016"
                            android:textColor="@color/colorPrimary"
                            android:layout_below="@+id/date_heading"
                            />

                        <TextView
                            android:id="@+id/time_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/date_txt"
                            />

                        <TextView
                            android:id="@+id/time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:45 AM"
                            android:textColor="@color/colorPrimary"
                            android:layout_below="@+id/time_heading"
                            />



                        <TextView
                            android:id="@+id/tap_for_detail_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TAP FOR DETAILS"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"

                            />

                    </RelativeLayout>



                </LinearLayout>



            </RelativeLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <ImageView
              android:layout_centerHorizontal="true"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_hivego_staff"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_appointment_details"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <Button
                android:id="@+id/contineButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="CONTINUE"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/button_text_color"
                android:background="@drawable/button_selector"
                />

        </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>